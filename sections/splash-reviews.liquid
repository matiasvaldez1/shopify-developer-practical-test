<section class="splash-reviews">
  <div class="splash-reviews__container">
    <div class="splash-reviews__header">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'section_title' %}
            <h2 class="splash-reviews__title" {{ block.shopify_attributes }}>
              {{ block.settings.title }}
            </h2>

          {% when 'section_subtitle' %}
            <p class="splash-reviews__subtitle" {{ block.shopify_attributes }}>
              {{ block.settings.subtitle }}
            </p>

          {% when 'trustpilot_rating' %}
            <div class="splash-reviews__trustpilot" {{ block.shopify_attributes }}>
              <div class="splash-reviews__trustpilot-stars">
                {% assign rating = block.settings.rating %}
                {% for i in (1..5) %}
                  <svg class="splash-reviews__trustpilot-star" width="20" height="20" viewBox="0 0 24 24" fill="{% if i <= rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="1">
                    <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/>
                  </svg>
                {% endfor %}
              </div>
              <span class="splash-reviews__trustpilot-text">
                Rated {{ block.settings.rating }} / 5 based on {{ block.settings.review_count | default: '48,984' }} reviews
              </span>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% assign featured_reviews = section.blocks | where: 'type', 'featured_review' %}
    {% if featured_reviews.size > 0 %}
      <div class="splash-reviews__featured">
        {% for review_block in featured_reviews %}
          {% render 'blocks/_splash-review-card', block: review_block %}
        {% endfor %}
      </div>
    {% endif %}

    {% assign regular_reviews = section.blocks | where: 'type', 'review_card' %}
    {% if regular_reviews.size > 0 %}
      <div class="splash-reviews__grid">
        {% for review_block in regular_reviews %}
          {% render 'blocks/_splash-review-card', block: review_block %}
        {% endfor %}
      </div>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'view_more_button' %}
          <div class="splash-reviews__view-more" {{ block.shopify_attributes }}>
            {% if block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="splash-reviews__view-more-btn">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

