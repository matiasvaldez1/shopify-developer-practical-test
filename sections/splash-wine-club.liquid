{{ 'splash-wine-club.css' | asset_url | stylesheet_tag }}

<section class="splash-wine-club">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'background_media' %}
        <div class="splash-wine-club__background" {{ block.shopify_attributes }}>
          {% if block.settings.background_image != blank %}
            {{ block.settings.background_image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: 'Wine club background' }}
          {% elsif block.settings.background_video != blank %}
            <video autoplay muted loop>
              <source src="{{ block.settings.background_video }}" type="video/mp4">
            </video>
          {% endif %}
        </div>

        {% if block.settings.show_overlay %}
          <div class="splash-wine-club__overlay"></div>
        {% endif %}
    {% endcase %}
  {% endfor %}

  <div class="splash-wine-club__container">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h2 class="splash-wine-club__title" {{ block.shopify_attributes }}>
            {{ block.settings.title }}
          </h2>

        {% when 'subtitle' %}
          <p class="splash-wine-club__subtitle" {{ block.shopify_attributes }}>
            {{ block.settings.subtitle }}
          </p>

        {% when 'description' %}
          <div class="splash-wine-club__content" {{ block.shopify_attributes }}>
            <p class="splash-wine-club__description">{{ block.settings.description }}</p>
          </div>

        {% when 'pricing' %}
          <div class="splash-wine-club__pricing" {{ block.shopify_attributes }}>
            <div class="splash-wine-club__price">
              <span class="splash-wine-club__price-amount">${{ block.settings.price }}</span>
              <div class="splash-wine-club__price-details">
                <p class="splash-wine-club__price-detail">{{ block.settings.price_description }}</p>
                {% if block.settings.bottles_count != blank %}
                  <p class="splash-wine-club__price-detail">{{ block.settings.bottles_count }}</p>
                {% endif %}
              </div>
            </div>

            {% if block.settings.show_promo %}
              <div class="splash-wine-club__promo">
                Promo Code: <span class="splash-wine-club__promo-code">{{ block.settings.promo_code }}</span> for {{ block.settings.promo_discount }} off
              </div>
            {% endif %}
          </div>

        {% when 'cta_button' %}
          {% if block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="splash-wine-club__button" {{ block.shopify_attributes }}>
              {{ block.settings.button_text }}
            </a>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Splash Wine Club",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "background_media",
      "name": "Background Media",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "background_video",
          "label": "Background Video URL (MP4)"
        },
        {
          "type": "checkbox",
          "id": "show_overlay",
          "label": "Show Overlay",
          "default": true
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Join our Wine Club"
        }
      ]
    },
    {
      "type": "subtitle",
      "name": "Subtitle",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Get exclusive access to premium wines delivered to your door"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Join thousands of wine lovers who trust Splash to deliver exceptional wines every month. Our experts handpick each bottle to ensure you discover new favorites."
        }
      ]
    },
    {
      "type": "pricing",
      "name": "Pricing Information",
      "limit": 1,
      "settings": [
        {
          "type": "number",
          "id": "price",
          "label": "Price",
          "default": 69
        },
        {
          "type": "text",
          "id": "price_description",
          "label": "Price Description",
          "default": "per month"
        },
        {
          "type": "text",
          "id": "bottles_count",
          "label": "Bottles Count",
          "default": "15 premium bottles"
        },
        {
          "type": "checkbox",
          "id": "show_promo",
          "label": "Show Promo Code",
          "default": true
        },
        {
          "type": "text",
          "id": "promo_code",
          "label": "Promo Code",
          "default": "SUBSCRIBE"
        },
        {
          "type": "text",
          "id": "promo_discount",
          "label": "Promo Discount",
          "default": "$20"
        }
      ]
    },
    {
      "type": "cta_button",
      "name": "CTA Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Splash Wine Club",
      "blocks": [
        {
          "type": "background_media"
        },
        {
          "type": "title"
        },
        {
          "type": "subtitle"
        },
        {
          "type": "description"
        },
        {
          "type": "pricing"
        },
        {
          "type": "cta_button"
        }
      ]
    }
  ]
}
{% endschema %}