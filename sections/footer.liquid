{{ 'splash-footer.css' | asset_url | stylesheet_tag }}

<footer class="splash-footer">
  <div class="splash-footer__container">
    <div class="splash-footer__content">
       Brand 
      <div class="splash-footer__brand">
        <h2>Splash</h2>
      </div>

       Links Container 
      <div class="splash-footer__links-container">
         Column 1 
        <div class="splash-footer__column">
          <ul>
            <li><a href="/pages/about">About Us</a></li>
            <li><a href="/pages/contact">Contact Us</a></li>
            <li><a href="/pages/faqs">FAQs</a></li>
            <li><a href="/products/gift-card">Gift Cards</a></li>
            <li><a href="/pages/wine-subscription">Wine Subscription</a></li>
          </ul>
        </div>

         Column 2 
        <div class="splash-footer__column">
          <ul>
            <li><a href="/pages/shipping">Where We Ship</a></li>
            <li><a href="/policies/privacy-policy">Privacy Policy</a></li>
            <li><a href="/policies/terms-of-service">Terms and Conditions</a></li>
            <li><a href="/policies/refund-policy">Refund Policy</a></li>
            <li><a href="/pages/california-privacy">Do Not Sell My Info (CA Only)</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="splash-footer__divider"></div>

    <div class="splash-footer__bottom">
      <div class="splash-footer__social">
        <a href="https://www.facebook.com/splashwines" target="_blank" aria-label="Facebook">Facebook</a>
        <a href="https://www.instagram.com/splashwines" target="_blank" aria-label="Instagram">Instagram</a>
      </div>
      <div class="splash-footer__copyright">
        <p>Â© Splash Wines {{ "now" | date: "%Y" }}</p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Splash Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Footer Settings"
    },
    {
      "type": "text",
      "id": "brand_text",
      "label": "Brand Text",
      "default": "Splash"
    }
  ]
}
{% endschema %}
