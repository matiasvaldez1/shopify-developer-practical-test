{{ 'splash-promotional-bar.css' | asset_url | stylesheet_tag }}

<!-- Promotional Bar -->
<section class="splash-promo-bar" style="--splash-promo-bg: #8B4B9C; --splash-promo-text: #FFFFFF;">
  <div class="splash-promo-content">
    <p class="splash-promo-text">
      Give $25, Get $25 â€” <a href="/pages/referral" class="splash-promo-link">Learn More</a>
    </p>
    <button class="splash-promo-close" onclick="this.parentElement.parentElement.style.display='none'">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
        <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>
</section>

<!-- Main Header -->
<header class="header section-wrapper" role="banner">
  <div class="header__container page-width">
    <div class="header__content">
      <!-- Logo -->
      <div class="header__logo">
        {% if section.settings.logo %}
          {{ section.settings.logo | image_url: height: section.settings.logo_height | image_tag: class: 'header__logo-image', alt: shop.name }}
        {% else %}
          <span class="header__logo-text">{{ shop.name }}</span>
        {% endif %}
      </div>

      <!-- Navigation -->
      <nav class="header__nav" role="navigation">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="header__nav-link">{{ link.title }}</a>
        {% endfor %}
      </nav>

      <!-- Actions -->
      <div class="header__actions">
        <button class="header__search-toggle" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <circle cx="8.5" cy="8.5" r="7.5"/>
            <path d="m17.5 17.5-4.5-4.5"/>
          </svg>
        </button>

        <a href="/account" class="header__account-link" aria-label="Account">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>

        <a href="/cart" class="header__cart-link" aria-label="Cart">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
            <circle cx="8" cy="21" r="1"/>
            <circle cx="19" cy="21" r="1"/>
            <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57L21 5H5.12"/>
          </svg>
          <span class="cart-count">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
.header {
  background: white;
  border-bottom: 1px solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 50;
}

.header__container {
  padding: 1rem;
}

.header__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
}

.header__logo-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: #8B4B9C;
}

.header__logo-image {
  max-height: 40px;
  width: auto;
}

.header__nav {
  display: flex;
  gap: 2rem;
}

.header__nav-link {
  text-decoration: none;
  color: #374151;
  font-weight: 500;
  transition: color 0.2s;
}

.header__nav-link:hover {
  color: #8B4B9C;
}

.header__actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.header__search-toggle,
.header__account-link,
.header__cart-link {
  background: none;
  border: none;
  cursor: pointer;
  color: #374151;
  position: relative;
  display: flex;
  align-items: center;
  text-decoration: none;
}

.cart-count {
  position: absolute;
  top: -8px;
  right: -8px;
  background: #8B4B9C;
  color: white;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  font-size: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

@media (max-width: 768px) {
  .header__nav {
    display: none;
  }

  .header__content {
    gap: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Splash Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Height",
      "default": 40
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}